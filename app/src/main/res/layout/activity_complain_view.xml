<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    android:elevation="12dp"
    tools:context=".ComplainView">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_centerHorizontal= "true"
            android:id="@+id/location1"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inder"
            android:text="Ambarish Mishra"
            android:textColor="#000"
            android:textSize="36sp"
            android:gravity="center"
            android:layout_below="@id/location1"/>

        <ImageView
            android:id="@+id/status"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_below="@id/location1"
            android:layout_centerInParent="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/title" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:text="item" />

        <TextView
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:fontFamily="@font/inder"
            android:text="Departmant"
            android:textColor="#000"
            android:layout_marginStart="36dp"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/category"
            android:fontFamily="@font/inder"
            android:paddingEnd="22dp"
            android:paddingStart="22dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud ..."
            android:textColor="@color/black" />
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description"
            android:layout_marginTop="12dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/status_update"/>

        <Button
            android:id="@+id/button_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/status_update"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="Update" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>